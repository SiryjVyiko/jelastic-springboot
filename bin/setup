#!/bin/bash -e

wget 'https://raw.githubusercontent.com/jelastic/jem/master/usr/lib/jelastic/libs/cartridge-common.lib' -O /usr/lib/jelastic/libs/cartridge-common.lib

sed -i 's/.x_/.x-/g' /etc/jelastic/environment; 
sed -i 's/.x_/.x-/g' /opt/repo/metadata/manifest.sh; 
sed -i 's/.x_/.x-/g' /opt/repo/.profile
rm -rf /opt/repo/versions/1.x_2.x/

. /etc/jelastic/environment

set -u

for dir in logs tmp pid cache env home; do
	mkdir -p $dir
done

sed -i 's/opt\/repo:\/bin\/bash/opt\/repo\/home:\/bin\/bash/g' "/etc/passwd"

if [ -d "/opt/repo/.ssh" ] ; then
    mv /opt/repo/.ssh /opt/repo/home/
fi

[ -f "/opt/repo/.bash_profile" ] && cp /opt/repo/.bash_profile /opt/repo/home/;

#sed -i 's/$RUNAS/root/' /etc/rc.d/init.d/cartridge;
chown -R 700:700 /opt/repo/ > /dev/null 2>&1
